# ========================================
# PiCMS Environment Configuration
# ========================================
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control!

# ========================================
# Flask Configuration
# ========================================
FLASK_ENV=development
# Options: development, production, testing

# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-change-me

# ========================================
# Database Configuration
# ========================================
# Development (SQLite)
DATABASE_URI=sqlite:///database.db
DEV_DATABASE_URI=sqlite:///database.db

# Production (PostgreSQL)
# DATABASE_URI=postgresql://username:password@localhost:5432/picms
# POSTGRES_USER=picms_user
# POSTGRES_PASSWORD=secure_password_here
# POSTGRES_DB=picms

# ========================================
# Security & Authentication
# ========================================
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=your-jwt-secret-key-here-change-me

# Admin credentials (change immediately after first login)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Password hashing rounds (10-14 recommended, higher = more secure but slower)
BCRYPT_LOG_ROUNDS=12

# ========================================
# File Upload Configuration
# ========================================
# Maximum file upload size in MB
MAX_CONTENT_MB=500

# Allowed video file extensions (comma-separated)
ALLOWED_EXTENSIONS=mp4,avi,mkv,mov,wmv,flv,webm

# ========================================
# CORS Configuration
# ========================================
# Allowed origins for CORS (comma-separated)
# Use * for all origins (not recommended for production)
CORS_ORIGINS=*
# Production example: CORS_ORIGINS=https://yourdomain.com,https://admin.yourdomain.com

# ========================================
# Rate Limiting
# ========================================
RATELIMIT_ENABLED=True
# Options: memory://, redis://localhost:6379/0
RATELIMIT_STORAGE_URL=memory://

# API rate limits (requests per minute)
API_RATE_LIMIT=60

# ========================================
# Device Management
# ========================================
# Minutes before a device is considered offline
DEVICE_TIMEOUT_MINUTES=5

# Auto-cleanup inactive devices (days)
DEVICE_CLEANUP_DAYS=90

# ========================================
# Logging Configuration
# ========================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable debug mode (shows detailed errors)
DEBUG=False

# ========================================
# Server Configuration
# ========================================
# Host and port for Flask development server
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Number of Gunicorn workers (production)
GUNICORN_WORKERS=4

# ========================================
# Email Notifications (Optional - Future Enhancement)
# ========================================
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password
# MAIL_DEFAULT_SENDER=your-email@gmail.com
# MAIL_ADMIN_RECIPIENTS=admin@example.com

# ========================================
# Redis Configuration (Optional - Future Enhancement)
# ========================================
# REDIS_URL=redis://localhost:6379/0
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ========================================
# Storage Configuration (Optional - Future Enhancement)
# ========================================
# Maximum total storage in GB
# MAX_STORAGE_GB=100

# Video retention policy in days (0 = keep forever)
# VIDEO_RETENTION_DAYS=0
